#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --require ts-node/register "$basedir/../typeorm/cli-ts-node-commonjs.js" "$@"
else 
  exec node --require ts-node/register "$basedir/../typeorm/cli-ts-node-commonjs.js" "$@"
fi
